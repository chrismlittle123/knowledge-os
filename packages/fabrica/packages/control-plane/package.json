{
  "name": "@fabrica/control-plane",
  "version": "0.1.0",
  "description": "Control plane API service for Fabrica",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "fabrica-control-plane": "dist/main.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run"
  },
  "dependencies": {
    "@fabrica/core": "workspace:*",
    "execa": "^9.5.2",
    "fastify": "^4.26.0",
    "pg": "^8.11.3",
    "pino-pretty": "^10.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.30",
    "@types/pg": "^8.11.0",
    "typescript": "^5.3.0",
    "vitest": "^1.6.1"
  }
}
