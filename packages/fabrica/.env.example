# Fabrica Environment Configuration
# Copy this file to .env and fill in your values

# Anthropic API Key (required)
ANTHROPIC_API_KEY=sk-ant-...

# GitHub Personal Access Token with repo access (required)
# Create at: https://github.com/settings/tokens
# Required scopes: repo (full control)
GITHUB_TOKEN=ghp_...

# Default Claude model (optional, defaults to sonnet)
# Options: sonnet, opus, haiku
CLAUDE_MODEL=sonnet

# GCP credentials path for deployer agent (optional)
# Only needed if using the deployer agent
GCP_CREDENTIALS_PATH=./secrets/gcp-credentials.json
